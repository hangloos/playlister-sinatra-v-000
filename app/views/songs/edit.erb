<form method="POST" action="/songs/<%=@song.slug%>/edit">
  <input type="hidden" name="_method" value="patch">
  <label>Song Name: </label>
  <input type="text" name="Name" value="<%=@song.name%>">
  <input type="hidden" name="Song ID" value="<%=@song.id%>">
  <label>Artist Name: </label>
  <input type="text" name="Artist Name" value="<%=@artist.name%>">
  <input type="hidden" name="Artist ID" value="<%=@artist.id%>">

  <% Genre.all.each do |genre| %>
  <label>Genre: <%=genre.name%></label>
  <input type="checkbox" id="<%=genre.name%>" name="genres[]" value="<%=genre.id%>"
  <%= 'checked' if genre.id == @genre.id %>>
  <% end %>


  <input type="submit" value="Save">
</form>